function SyncPersoBack(){
	rep=$(pwd) 
	ssrep=$(echo $rep | awk -F "These/" '{printf $2 "\n"}') 
	dir=$ssrep/$1
	ssh $perso "mkdir -p /home/fabien/These/$dir"
	echo "rsync -e ssh -ravz  $perso:/home/fabien/These/$dir/* $1"
	rsync -e ssh -ravz  $perso:/home/fabien/These/$dir/* $1
	 }

