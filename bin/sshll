#!/bin/bash
usage(){
    echo usage:
    echo   sshGoSameLoc args1 [ opts ]
    echo example:
    echo   sshGoSameLoc myBen -X  # to go to myBen with graphic server
}
source $(dirname ${BASH_SOURCE[0]})/sshFunctions

if [[ "$#" -ne "1" ]]; then
    echo "illegal number of parameters (!=1)"
    usage
else
    tgt=$(sshSameLoc $1)
    echo ll on $tgt on $1:
    echo ssh -t ${@:2} $1 "ls -l $tgt"
    ssh -t  ${@:2} $1 "ls -l $tgt"
fi
